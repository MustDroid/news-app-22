<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="0dp"
        android:text="BREAKING NEWS - Dog attacked cat"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/layoutAuthorAndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitle"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >

        <TextView
            android:id="@+id/txtAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Albus Dumbledore"
            android:layout_alignParentLeft="true"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtPublishedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01.07.2018"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:textSize="15sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lore impsum dolor sit amet."
        android:layout_below="@id/layoutAuthorAndDate"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtURL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read more..."
        android:layout_below="@id/txtDescription"
        android:padding="0dp"
        android:paddingTop="10dp"
        android:textStyle="bold"

        android:textSize="15sp"
        android:layout_marginBottom="20dp"
        />

</RelativeLayout>